<%= render "layouts/errors", object: @post %>

<%= form_for [current_admin, @post], remote: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control" %>
  <%= f.submit 'Submit Post', class: "btn btn-primary" %>
  <%= link_to 'Cancel', '#', class: "btn btn-primary", id: "cancel-edit-post" %>
<% end %>

<script>
$('cancel-edit-post').click(function(){
  $('#edit_post_link_<%=@post.id%>').show();
  $('#edit_post_<%=@post.id%>').remove();
});
</script>
