<h1>ESL Classes in the Portland Metro Area</h1>


<%= form_tag sites_path, method: 'get', role: 'search' do %>
<%= label_tag :center, 'Find a Class Near You:' %>
<%= text_field_tag :center, params[:center], placeholder: 'Enter Zip Code', class: 'form-control', id: 'center-map' %>
<%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
<% end %>


<div id="map-container">
  <div id="map"></div>
</div>

<div class="dropdown">
  <button class="dropdown-toggle btn btn-primary" type="button" data-toggle="dropdown">Choose a Region
  <span class="caret"></span></button>
  <ul class="dropdown-menu">
    <li><a href="/">All</a></li>
    <li><a href="?region=north-northeast">North/Northeast</a></li>
    <li><a href="?region=south-southeast">South/Southeast</a></li>
    <li><a href="?region=southwest">Southwest</a></li>
    <li><a href="?region=downtown">Downtown</a></li>
    <li><a href="?region=gresham">Gresham</a></li>
    <li><a href="?region=washington-county">Washington County</a></li>
    <li><a href="?region=clark-county">Clark County</a></li>
    <li><a href="?region=other-areas">Other Areas</a></li>
  </ul>
</div>


<ul>
  <% @sites.each do |site| %>
    <li><%= link_to site.name, site_path(site) %></li>
  <% end %>
</ul>

<%= link_to 'Add a New Class', new_site_path, class: "btn btn-primary"  %>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.map.centerOn(<%= @center_on %>);
    handler.getMap().setZoom(<%= @zoom %>);
  });
</script>
