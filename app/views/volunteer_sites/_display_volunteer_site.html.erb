<h2><%= link_to site.name, site.url %></h2>
<p><%= site.description %></p>
<p><%= site.level %></p>
<% if current_admin %>
  <span id="edit_volunteer_site_button_<%=site.id%>">
    <%= link_to edit_volunteer_site_path(site), class: "btn btn-success", id: "edit-volunteer-site", remote: true do %>
      <i class="glyphicon glyphicon-pencil"></i>
    <% end %>
  </span>
  <%= link_to volunteer_site_path(site), class: "btn btn-danger", id: "delete-volunteer-site", data: {confirm: "Are you sure you'd like to delete this volunteer site?", method: "delete"} do %>
    <i class="glyphicon glyphicon-trash"></i>
  <% end %>
<% end %>
