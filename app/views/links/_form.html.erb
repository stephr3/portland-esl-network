<%= render "layouts/errors", object: @link %>
<%= form_for @link do |f| %>
  <%= f.label :page, 'Link Page:' %>
  <%= f.select :page, options_for_select(['', 'Student Learning Resources', 'Refugee Backgrounders', 'Teaching Resources'], selected: f.object.page), {}, {class: "form-control"} %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true, class: "form-control" %>
  <%= f.label :url %>
  <%= f.url_field :url, required: true, placeholder: "http://", class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_area :description, required: true, class: "form-control" %>
  <%= f.label :tag, 'Link Category:' %>
  <%= f.select :tag, options_for_select(['','Refugee Backgrounders', 'Teaching Resources', 'General', 'Writing', 'Pronunciation', 'GED', 'Literacy', 'Listening', 'Computer Skills', 'Citizenship Classes'], selected: f.object.page), {}, {class: "form-control"} %>
  <%= f.submit 'Submit Link', class: "btn btn-primary" %>
<% end %>

<% if !current_page?('/links/new') %>
  <%= link_to 'Cancel', '#', class: "btn btn-primary", id: "cancel-edit-link" %>
<% end %>

<script>
$('cancel-edit-link').click(function(){
  $('#edit_link_button_<%=@link.id%>').show();
  $('#edit_link_<%=@link.id%>').remove()
});
</script>
