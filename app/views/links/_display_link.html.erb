<h2><%= link_to link.title, link.url %></h2>
<p><%= link.description %></p>
<% if current_admin %>
  <span id="edit_link_button_<%=link.id%>"><%= link_to "Edit Link", edit_link_path(link), class: "btn btn-success", remote: true %></span>
  <%= link_to "Delete Link", link_path(link), class: "btn btn-danger", data: {confirm: "Are you sure you'd like to delete this link?", method: "delete"} %>
<% end %>
